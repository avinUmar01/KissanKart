<% layout("/layouts/boilerplate")%>
<body>
    <h3>All Products</h3>
    <form method="GET" action="/products/new">
        <button>Add New Product</button>
    </form>
    <ul>
        <% for(let product of allProducts) { %>
            <li> <a href="/products/<%=product._id%>"><%= product.name %></a> </li>
        <%} %>
    </ul>
</body>

