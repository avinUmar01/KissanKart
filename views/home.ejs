    <html lang="en">
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>KisaanKart</title>
    
    <!-- three.js CDN -->
    <script src="https://unpkg.com/three@0.153.0/build/three.min.js"></script>
    
    <style>
      :root{
        --bg1:#07140b;
        --bg2:#07220f;
        --accent:#fff700;
        --green1:#1b5e20;
        --glass: rgba(255,255,255,0.06);
      }
    
      html,body{
        height:100%;
        margin:0;
        background: radial-gradient(1200px 600px at 10% 20%, rgba(0,200,83,0.06), transparent 10%),
                    radial-gradient(900px 500px at 90% 80%, rgba(255,183,77,0.03), transparent 10%),
                    linear-gradient(180deg,var(--bg1),var(--bg2));
        font-family: Inter, Poppins, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: #e6ffee;
        -webkit-font-smoothing:antialiased;
        -moz-osx-font-smoothing:grayscale;
        overflow:hidden;
      }
    
      /* Canvas fills full screen */
      #canvas-wrap { position:fixed; inset:0; display:block; z-index:0; }
    
      /* UI container (logo + text + CTA) */
      .ui {
        position:relative;
        z-index:5;
        width:100%;
        height:100%;
        display:flex;
        align-items:center;
        justify-content:center;
        pointer-events:none; /* Let pointer hit canvas */
      }
    
      .panel {
        pointer-events:auto;
        text-align:center;
        transform: translateZ(100px);
        user-select:none;
        backdrop-filter: blur(6px) saturate(1.2);
        -webkit-backdrop-filter: blur(6px) saturate(1.2);
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
        border-radius: 18px;
        padding: 28px 36px;
        box-shadow: 0 20px 60px rgba(2,10,6,0.6), inset 0 1px 0 rgba(255,255,255,0.02);
        display:flex;
        flex-direction:column;
        gap:18px;
        align-items:center;
        max-width:880px;
        margin: 24px;
      }
    
      .brand {
        display:flex;
        gap:18px;
        align-items:center;
        justify-content:center;
      }
    
      .logo-preview {
        width:110px;
        height:110px;
        display:block;
        border-radius:20px;
        background: linear-gradient(180deg, rgba(255,255,255,0.06), rgba(0,0,0,0.05));
        padding:10px;
        box-shadow: 0 8px 18px rgba(0,0,0,0.45);
        pointer-events:none;
      }
    
      h1 {
        margin:0;
        font-size: clamp(20px, 3.8vw, 44px);
        line-height:1.02;
        font-weight:700;
        letter-spacing: -0.02em;
        color: linear-gradient(90deg,#fff,#dfffdc);
      }
    
      .sub {
        color: #bfe8bc;
        font-weight:500;
        font-size: clamp(12px, 1.4vw, 16px);
        opacity:0.95;
        max-width:720px;
      }
    
      .cta {
        pointer-events:auto;
        display:inline-flex;
        margin-top:6px;
        gap:12px;
        align-items:center;
      }
    
      .btn {
        --btn-bg:linear-gradient(90deg,var(--accent),#ffff88);
        background:var(--btn-bg);
        color:#153d1f;
        padding:12px 28px;
        border-radius:999px;
        border:none;
        font-weight:700;
        cursor:pointer;
        box-shadow: 0 10px 30px rgba(255,215,0,0.12);
        transform-origin:center;
        transition: transform 220ms cubic-bezier(.2,.9,.3,1), box-shadow 220ms;
      }
      .btn:active{ transform: scale(0.98) translateY(1px); }
      .btn.secondary {
        background: transparent;
        color: #cdeac7;
        padding: 10px 20px;
        border-radius:14px;
        border: 1px solid rgba(255,255,255,0.04);
        box-shadow:none;
      }
    
      /* Custom cursor + trail */
      .cursor {
        position:fixed;
        z-index:9;
        width:18px;
        height:18px;
        border-radius:50%;
        pointer-events:none;
        transform: translate(-50%,-50%);
        mix-blend-mode: screen;
        background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.95), rgba(255,255,255,0.25) 20%, transparent 60%);
        box-shadow: 0 8px 26px rgba(0,200,80,0.25), 0 0 8px rgba(255,255,0,0.12);
        transition: width 240ms, height 240ms, opacity 240ms, transform 240ms;
        opacity:0.95;
      }
    
      .cursor.big { width:44px; height:44px; opacity:0.85; transform: translate(-50%,-50%) scale(1.05); }
    
      /* trailing nodes (small faint dots) */
      .trail-dot {
        position:fixed;
        z-index:8;
        width:8px;
        height:8px;
        border-radius:50%;
        pointer-events:none;
        background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), rgba(255,255,255,0.18) 20%, transparent 60%);
        opacity:0.08;
        mix-blend-mode: screen;
        transform: translate(-50%,-50%);
        transition: transform 160ms linear, opacity 250ms;
      }
    
      /* small instruction top-left */
      .hint {
        position: fixed;
        left:18px;
        top:18px;
        z-index:6;
        color:#bfe8bc;
        font-size:13px;
        padding:8px 12px;
        border-radius:10px;
        background: rgba(0,0,0,0.14);
        border: 1px solid rgba(255,255,255,0.02);
      }
    
      @media (max-width:720px){
        .panel { padding:20px; border-radius:14px; }
        .logo-preview { width:82px; height:82px; }
        .cursor { display:none; }
        .trail-dot { display:none; }
      }
    </style>
    </head>
    <body>
    
    <div id="canvas-wrap"></div>
    
    <!-- UI layer (keeps layout centered and accessible) -->
    <div class="ui" aria-hidden="false">
      <div class="panel" role="region" aria-label="Welcome panel">
        <div class="brand">
          <div class="logo-preview">
            <!-- local image required: KISAANKART_PNG.png -->
            <img src="/assests/KISAANKART_PNG.png" alt="KisaanKart" style="width:100%;height:100%;object-fit:contain;border-radius:14px;mix-blend-mode:normal;">
          </div>
          <div style="text-align:left">
            <h1>Welcome to <span style="color:var(--accent)">KisaanKart</span></h1>
            <div class="sub">Bringing smart, sustainable agri-tech to every farmer â€” shop, learn and grow with IoT-driven products and local support.</div>
          </div>
        </div>
    
        <div class="cta" style="margin-left:auto;">
          <button class="btn" onclick="location.href='/products'">Start Buying</button>
          <button class="btn secondary" onclick="location.href='#features'">Explore</button>
        </div>
      </div>
    </div>
    
    <!-- cursor elements -->
    <div class="cursor" id="cursor"></div>
    <!-- create a few trail dots -->
    <div class="trail-dot" id="t0"></div>
    <div class="trail-dot" id="t1"></div>
    <div class="trail-dot" id="t2"></div>
    <div class="trail-dot" id="t3"></div>
    <div class="trail-dot" id="t4"></div>
    
    <script>
    /* -------------------------
       Three.js scene setup
       ------------------------- */
    const canvasWrap = document.getElementById('canvas-wrap');
    
    // renderer
    const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.outputColorSpace = THREE.SRGBColorSpace;
    canvasWrap.appendChild(renderer.domElement);
    
    // scene & camera
    const scene = new THREE.Scene();
    scene.fog = new THREE.FogExp2(0x07140b, 0.0022);
    
    const camera = new THREE.PerspectiveCamera(40, window.innerWidth / window.innerHeight, 0.1, 1000);
    camera.position.set(0, 0.6, 4.2);
    
    // lighting
    const amb = new THREE.AmbientLight(0x77a77a, 0.9);
    scene.add(amb);
    
    const dir = new THREE.DirectionalLight(0xfff0b8, 1.0);
    dir.position.set(5, 8, 5);
    scene.add(dir);
    
    const rim = new THREE.PointLight(0x8fffb0, 0.6, 40);
    rim.position.set(-6, 2, 6);
    scene.add(rim);
    
    /* -------------------------
       Load logo texture (local file expected)
       ------------------------- */
    const loader = new THREE.TextureLoader();
    const logoTexture = loader.load('KISAANKART_PNG.png', () => {
      logoTexture.encoding = THREE.sRGBEncoding;
    });
    
    /* -------------------------
       Create a central "logo" in 3D (a slightly curved panel)
       ------------------------- */
    const logoGroup = new THREE.Group();
    scene.add(logoGroup);
    
    // plane geometry with slight curvature via vertex displacement
    const planeGeom = new THREE.PlaneGeometry(2.2, 2.2, 24, 24);
    for (let i=0;i<planeGeom.attributes.position.count;i++){
      const y = planeGeom.attributes.position.getY(i);
      // small curvature: z = -0.08 * (x^2 + y^2)
      const x = planeGeom.attributes.position.getX(i);
      const z = -0.06 * (x*x + y*y);
      planeGeom.attributes.position.setZ(i, z);
    }
    planeGeom.computeVertexNormals();
    
    const logoMat = new THREE.MeshStandardMaterial({
      map: logoTexture,
      transparent: true,
      metalness: 0.05,
      roughness: 0.6,
      emissive: new THREE.Color(0x0c2a10).multiplyScalar(0.35),
      emissiveIntensity: 0.65
    });
    
    const logoMesh = new THREE.Mesh(planeGeom, logoMat);
    logoMesh.scale.set(1, 1, 1);
    logoMesh.rotation.x = -0.05;
    logoMesh.position.y = 0.1;
    logoGroup.add(logoMesh);
    
    /* subtle rim glow using another slightly larger plane with additive blending */
    const glowMat = new THREE.MeshBasicMaterial({
      map: logoTexture,
      blending: THREE.AdditiveBlending,
      transparent: true,
      opacity: 0.25,
      depthWrite: false
    });
    const glowMesh = new THREE.Mesh(new THREE.PlaneGeometry(2.6, 2.6, 1, 1), glowMat);
    glowMesh.position.z = -0.02;
    logoGroup.add(glowMesh);
    
    /* -------------------------
       Greenery sprites (procedural leaves using inline SVG dataURL)
       ------------------------- */
    
    /* create an inline leaf SVG and convert to dataURL for texture */
    function leafTexture(color1='#2e7d32', color2='#66bb6a') {
      const svg = `
      <svg xmlns='http://www.w3.org/2000/svg' width='200' height='200' viewBox='0 0 200 200'>
        <defs>
          <linearGradient id='g' x1='0' x2='1'>
            <stop offset='0' stop-color='${color1}' />
            <stop offset='1' stop-color='${color2}' />
          </linearGradient>
        </defs>
        <g transform='translate(100,100)'>
          <path d='M-8 -70 C 45 -60 80 -20 70 25 C 45 55 0 70 -20 60 C -60 40 -90 -10 -70 -50 C -60 -65 -30 -75 -8 -70 z'
                fill='url(#g)' stroke='rgba(0,0,0,0.25)' stroke-width='2'/>
          <path d='M-10 -40 C 0 -30 20 -10 30 10' stroke='rgba(12,50,6,0.12)' stroke-width='3' fill='none' stroke-linecap='round'/>
        </g>
      </svg>
      `;
      return 'data:image/svg+xml;utf8,' + encodeURIComponent(svg);
    }
    
    const leafTex = new THREE.TextureLoader().load(leafTexture('#226b2e','#59a45a'));
    leafTex.encoding = THREE.sRGBEncoding;
    leafTex.magFilter = THREE.LinearFilter;
    leafTex.minFilter = THREE.LinearMipMapLinearFilter;
    
    // create many sprites and distribute in depth for parallax
    const leafGroup = new THREE.Group();
    scene.add(leafGroup);
    
    const LEAF_COUNT = 60;
    for (let i=0;i<LEAF_COUNT;i++){
      const mat = new THREE.SpriteMaterial({
        map: leafTex,
        transparent: true,
        opacity: 0.9,
        depthWrite: false
      });
      const spr = new THREE.Sprite(mat);
    
      // random placement in a semi-donut around the logo
      const radius = 2.2 + Math.random()*4.0;
      const angle = Math.random() * Math.PI * 2;
      const height = (Math.random()-0.5) * 2.4;
      spr.position.set(Math.cos(angle)*radius* (0.6 + Math.random()*0.8), height, Math.sin(angle)*radius* (0.6 + Math.random()*0.8));
      spr.scale.setScalar(0.35 + Math.random()*0.9);
      spr.userData = { ang: angle, radius: radius, speed: 0.001 + Math.random()*0.006, sway: Math.random()*0.7 };
      leafGroup.add(spr);
    }
    
    /* extra small floating particles for magical sparkle */
    const particleGeo = new THREE.BufferGeometry();
    const PARTICLES = 220;
    const pos = new Float32Array(PARTICLES*3);
    for (let i=0;i<PARTICLES;i++){
      const r = 2.6 + Math.random()*6.0;
      const a = Math.random()*Math.PI*2;
      pos[i*3+0] = Math.cos(a)*r * (0.8 + Math.random()*0.5);
      pos[i*3+1] = (Math.random()-0.5) * 3.2;
      pos[i*3+2] = Math.sin(a)*r * (0.8 + Math.random()*0.5);
    }
    particleGeo.setAttribute('position', new THREE.BufferAttribute(pos, 3));
    const particleMat = new THREE.PointsMaterial({
      color: 0xe9ffd6,
      size: 0.04,
      transparent: true,
      opacity: 0.55,
      depthWrite: false
    });
    const particles = new THREE.Points(particleGeo, particleMat);
    scene.add(particles);
    
    /* -------------------------
       Interaction: cursor + parallax
       ------------------------- */
    const mouse = { x:0, y:0, nx:0, ny:0 }; // nx/ny are normalized [-1,1]
    const cursor = document.getElementById('cursor');
    const trails = [0,1,2,3,4].map(i => document.getElementById('t'+i));
    let trailPositions = trails.map(()=>({x:window.innerWidth/2,y:window.innerHeight/2}));
    
    // pointer handling
    window.addEventListener('pointermove', (e) => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
      mouse.nx = (e.clientX / window.innerWidth) * 2 - 1;
      mouse.ny = - (e.clientY / window.innerHeight) * 2 + 1;
    
      // cursor element move (fast)
      cursor.style.transform = `translate(${mouse.x}px, ${mouse.y}px) translate(-50%,-50%)`;
      // enlarge cursor when near ui buttons (detect DOM element under pointer)
      const hit = document.elementFromPoint(mouse.x, mouse.y);
      if (hit && (hit.classList && (hit.classList.contains('btn') || hit.tagName === 'A' || hit.tagName === 'BUTTON'))) {
        cursor.classList.add('big');
        trails.forEach(t=> t.style.opacity = 0.22);
      } else {
        cursor.classList.remove('big');
        trails.forEach(t=> t.style.opacity = 0.08);
      }
    });
    
    // smooth trailing for dots
    function updateCursorTrail(){
      // move first trail toward cursor, each subsequent follows previous
      let target = {x:mouse.x, y:mouse.y};
      for (let i=0;i<trailPositions.length;i++){
        const tp = trailPositions[i];
        tp.x += (target.x - tp.x) * (0.18 - i*0.02);
        tp.y += (target.y - tp.y) * (0.18 - i*0.02);
        const el = trails[i];
        el.style.transform = `translate(${tp.x}px, ${tp.y}px) translate(-50%,-50%) scale(${1 - i*0.06})`;
        target = tp;
      }
    }
    
    /* Hover detection: when pointer is near the center, enlarge logo */
    function isPointerNearLogo() {
      const lx = window.innerWidth/2;
      const ly = window.innerHeight/2;
      const dx = mouse.x - lx;
      const dy = mouse.y - ly;
      const dist = Math.sqrt(dx*dx + dy*dy);
      return dist < Math.min(window.innerWidth, window.innerHeight) * 0.28;
    }
    
    /* -------------------------
       Animation loop
       ------------------------- */
    const clock = new THREE.Clock();
    
    function animate() {
      const t = clock.getElapsedTime();
    
      // animate leaves: rotate slowly around center + slight bobbing
      leafGroup.children.forEach((s,i) => {
        s.userData.ang += s.userData.speed * (1 + 0.2*Math.sin(t*0.8 + i));
        const a = s.userData.ang;
        const r = s.userData.radius;
        // slightly varying radius to make breathing/float
        const rr = r + Math.sin(t*0.7 + i) * 0.16;
        s.position.x = Math.cos(a) * rr;
        s.position.z = Math.sin(a) * rr;
        s.position.y += Math.sin(t* (0.3 + s.userData.speed*20) + i) * 0.0025;
        s.rotation.z = Math.sin(t* (0.5 + s.userData.speed*10) + i) * 0.6;
        s.material.opacity = 0.75 + Math.sin(t*0.7 + i)*0.12;
      });
    
      // particle slow rise & subtle rotation
      particles.rotation.y = t * 0.02;
      particles.position.y = Math.sin(t*0.15) * 0.03;
    
      // camera slight parallax based on mouse (smooth)
      const targetCamX = mouse.nx * 0.32;
      const targetCamY = mouse.ny * 0.18;
      camera.position.x += (targetCamX - camera.position.x) * 0.06;
      camera.position.y += (targetCamY - camera.position.y) * 0.06;
      camera.lookAt(0, 0.15, 0);
    
      // logo reacts: small tilt toward pointer & subtle breathing
      const tiltX = mouse.ny * 0.08; // tilt up/down
      const tiltY = mouse.nx * 0.12; // tilt left/right
      logoGroup.rotation.x += (tiltX - logoGroup.rotation.x) * 0.08;
      logoGroup.rotation.y += (tiltY - logoGroup.rotation.y) * 0.08;
      logoGroup.scale.x = logoGroup.scale.y = logoGroup.scale.z = 1 + Math.sin(t*0.9)*0.012;
    
      // when pointer near center, pop the logo slightly
      if (isPointerNearLogo()) {
        logoGroup.scale.x += (1.06 - logoGroup.scale.x) * 0.1;
        logoGroup.scale.y += (1.06 - logoGroup.scale.y) * 0.1;
        logoGroup.scale.z += (1.06 - logoGroup.scale.z) * 0.1;
      }
    
      // update cursor trail DOM positions
      updateCursorTrail();
    
      renderer.render(scene, camera);
      requestAnimationFrame(animate);
    }
    requestAnimationFrame(animate);
    
    /* -------------------------
       Resize handler
       ------------------------- */
    window.addEventListener('resize', () => {
      renderer.setSize(window.innerWidth, window.innerHeight);
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
    });
    
    /* -------------------------
       Intro animation (logo scale & UI fade)
       ------------------------- */
    (function intro() {
      // animate initial logo reveal scale
      logoGroup.scale.set(0.6,0.6,0.6);
      logoGroup.rotation.set(0.06, -0.12, 0);
      const start = performance.now();
      const dur = 1100;
      function step(now){
        const p = Math.min(1, (now - start)/dur);
        const ease = 1 - Math.pow(1 - p, 3);
        logoGroup.scale.set(0.6 + (1 - 0.6)*ease, 0.6 + (1 - 0.6)*ease, 0.6 + (1 - 0.6)*ease);
        logoGroup.rotation.y = -0.12 + 0.12*ease;
        if (p < 1) requestAnimationFrame(step);
      }
      requestAnimationFrame(step);
    
      // subtle UI entrance
      const panel = document.querySelector('.panel');
      panel.style.opacity = 0;
      panel.style.transform = 'translateY(18px) scale(0.995)';
      setTimeout(()=> {
        panel.style.transition = 'opacity 600ms cubic-bezier(.2,.9,.3,1), transform 700ms cubic-bezier(.2,.9,.3,1)';
        panel.style.opacity = 1;
        panel.style.transform = 'translateY(0) scale(1)';
      }, 280);
    })();
    
    /* -------------------------
       Polishing: stop context menu on long press mobile (optional)
       ------------------------- */
    window.addEventListener('contextmenu', e => e.preventDefault());
    </script>
    </body>
